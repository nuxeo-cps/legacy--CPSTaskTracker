<tal:block define="current_action string:view;
                   dummy python:request.set('breadcrumb_set',
                                             here.getTaskBreadCrumb(request))
                   ">
<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master">
  <metal:block fill-slot="base">
    <base href="." tal:attributes="href string:${here/absolute_url}/" />
  </metal:block>
<body>


<metal:block fill-slot="header">
  <tal:block tal:replace="here/title_or_id" />
</metal:block>

<metal:block fill-slot="main">
<!-- DEBUG
<span tal:replace="structure request" />
<span tal:replace="here/isAssigned" />
<span tal:replace="here/isCreator" />
<span tal:replace="here/isTheAssignedOne" />
<span tal:replace="here/isLate" />
END DEBUG -->
<small tal:content="here/description|nothing"/>
<br />
<br />
<table align="center" width="100%" cellpadding="2" cellspacing="2">
<tr>
  <td bgcolor="#EEEEEE" width="30%">
    <strong>
      <span tal:replace="python:mcat('_label_title')" />
    </strong>
  </td>
  <td>
    <span tal:replace="here/title" />
  </td>
</tr>
<tr>
  <td bgcolor="#EEEEEE">
    <strong>
      <span tal:replace="python:mcat('_label_start_date')" />
    </strong>
  </td>
  <td >
    <span tal:define="start_date here/start_task_date|nothing"
          tal:replace="python:here.get_date(str(start_date))['all']" />
  </td>
</tr>
<tr>
  <td bgcolor="#EEEEEE">
    <strong>
      <span tal:replace="python:mcat('_label_stop_date')" />
    </strong>
  </td>
  <td>
   <span tal:define="stop_date here/stop_task_date|nothing"
          tal:replace="python:here.get_date(str(stop_date))['all']" />
  </td>
</tr>
<tr>
  <td bgcolor="#EEEEEE">
    <strong>
      <span tal:replace="python:mcat('_label_priority')" />
    </strong>
  </td>
  <td>
    <span tal:replace="here/task_priority" />
  </td>
</tr>
<tr>
  <td bgcolor="#EEEEEE">
    <strong>
       <span tal:replace="python:mcat('_label_type')" />
    </strong>
  </td>
  <td>
    <span tal:replace="python:mcat(here.task_type)" />
  </td>
</tr>
<tr>
  <td bgcolor="#EEEEEE">
    <strong>
      <span tal:replace="python:mcat('_label_assigned_to_users')" />
   </strong>
  </td>
  <td>
      <tal:block define="members python:here.getMemberIds()">
        <tal:block repeat="member members">
          <span tal:replace="member" /><br />
        </tal:block>
      </tal:block>
  </td>
</tr>
<tr>
  <td bgcolor="#EEEEEE">
    <strong>
      <span tal:replace="python:mcat('_label_assigned_to_groups')" />
    </strong>
  </td>
  <td>
      <tal:block define="groups python:here.getGroupIds()">
        <tal:block repeat="group groups">
          <span tal:replace="group" /><br />
        </tal:block>
      </tal:block>
  </td>
</tr>
<tr>
  <td bgcolor="#EEEEEE">
    <strong>
      <span tal:replace="python:mcat('_label_accepted_by')" />
    </strong>
  </td>
  <td>
    <span tal:replace="here/getTheAssignedOne|nothing" />
  </td>
</tr>

<tr>
  <td bgcolor="#EEEEEE">
    <strong>
      <span tal:replace="python:mcat('_label_status')" />
    </strong>
  </td>
  <td>
    <span tal:replace="python:mcat(here.getStatus())" />
  </td>
</tr>

<tr>
  <td bgcolor="#EEEEEE">
    <strong>
      <span tal:replace="python:mcat('_label_rejected_by')" />
    </strong>
  </td>
  <td>
    <tal:block define="task_rejecters here/getTaskRejecters" >
     <tal:block repeat="rejecter task_rejecters">
       <span tal:replace="rejecter" /><br />
     </tal:block>
    </tal:block>
  </td>
</tr>

<tr>
  <td bgcolor="#EEEEEE">
    <strong>
      <span tal:replace="python:mcat('_label_project')" />
    </strong>
  </td>
  <td>
    <span tal:replace="here/task_project" />
  </td>
</tr>
<tr>
  <td bgcolor="#EEEEEE">
    <strong>
      <span tal:replace="python:mcat('_label_goal')" />
    </strong>
  </td>
  <td>
    <span tal:replace="here/task_goal" />
  </td>
</tr>
</table>

<tal:block replace="structure here/flexibledocument_content_view" />

<metal:block use-macro="here/main_widgets/macros/linksrender">
    Related links
</metal:block>

<metal:block use-macro="here/main_widgets/macros/discussion" />


</metal:block>

</body>
</html>
</tal:block>
